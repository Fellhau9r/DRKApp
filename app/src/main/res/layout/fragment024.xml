<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:orientation="vertical" >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:baselineAligned="false"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_fragment01_overviewtitle"
                android:orientation="vertical" >

                <EditText
                    android:id="@+id/TextView01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/fragment02_appointmentTitle"
                    android:singleLine="true"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/colorPrimaryLight" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_fragment01_posts"
                android:orientation="vertical" >


                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kategorie"
                            android:textSize="12sp"
                            android:id="@+id/textView3" />

                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView4"
                            android:layout_marginLeft="8dp"/>
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Beschreibung"
                            android:singleLine="false"
                            android:scrollHorizontally="false"
                            android:textSize="12sp"
                            android:id="@+id/textView7" />

                        <EditText
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text="Medium Text"
                            android:id="@+id/textView8"
                            android:textSize="12sp"
                            android:layout_marginLeft="5dp"/>
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ort"
                            android:textSize="12sp"
                            android:id="@+id/textView9" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Medium Text"
                            android:id="@+id/textView10"
                            android:textSize="12sp"
                            android:layout_marginLeft="5dp"/>
                    </TableRow>

                    <TableRow
                        android:clickable="true"
                        android:id="@+id/tablerow_date"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="2dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Datum"
                            android:textSize="12sp"
                            android:id="@+id/textView11" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Medium Text"
                            android:id="@+id/textView12"
                            android:textSize="12sp"
                            android:layout_marginLeft="8dp"/>
                    </TableRow>

                    <TableRow
                        android:clickable="true"
                        android:id="@+id/tablerow_time"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Uhrzeit"
                            android:textSize="12sp"
                            android:id="@+id/textView13" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Medium Text"
                            android:id="@+id/textView14"
                            android:textSize="12sp"
                            android:layout_marginLeft="8dp"/>
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="2dp"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Statistikrelevanz"
                            android:textSize="12sp"
                            android:id="@+id/textView15" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ja"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="8dp"
                                android:textSize="12sp"
                                android:id="@+id/textView19" />

                            <Switch
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView16"
                                android:gravity="left"
                                android:layout_gravity="left"
                                android:textSize="12sp"
                                android:layout_marginLeft="8dp"
                                android:checked="true" />

                        </LinearLayout>
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mind. Teilnehmerzahl"
                            android:textSize="12sp"
                            android:id="@+id/textView20" />

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:ems="10"
                            android:id="@+id/editText21"
                            android:textSize="12sp"/>

                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Max. Teilnehmerzahl"
                            android:textSize="12sp"
                            android:id="@+id/textView22" />

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:ems="10"
                            android:id="@+id/editText23"
                            android:textSize="12sp"/>

                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Teilnehmerzahl unbegrenzt"
                            android:textSize="12sp"
                            android:id="@+id/textView24"
                            android:layout_gravity="center_vertical"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ja"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="8dp"
                                android:textSize="12sp"
                                android:id="@+id/textView25" />

                            <Switch
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/switch2"
                                android:gravity="left"
                                android:layout_gravity="left"
                                android:textSize="12sp"
                                android:layout_marginLeft="8dp"
                                android:checked="true" />
                        </LinearLayout>


                    </TableRow>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btnCancel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:text="Abbrechen"
                            android:textSize="12sp"
                            android:textStyle="normal"
                            style="?android:attr/borderlessButtonStyle"/>

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <Button
                            android:id="@+id/btnSaveChanges"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:text="Änderungen speichern"
                            android:textSize="12sp"
                            android:textStyle="normal"
                            style="?android:attr/borderlessButtonStyle"/>

                    </LinearLayout>




                </TableLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>

